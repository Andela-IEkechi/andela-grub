<h1 class="page-header">My Dinner Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dinner_orders.each do |dinner_order| %>
      <tr>
        <td><%= dinner_order.menu_content.food_item %> |</td>
        <td><%= link_to 'Edit', edit_dinner_order_path(dinner_order) %> |</td>
        <td><%= link_to 'Destroy', dinner_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

