<h1 class="page-header">My Breakfast Orders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breakfast_orders.each do |breakfast_order| %>
      <tr>
        <td><%= breakfast_order.menu_content.food_item %> |</td>
        <td><%= breakfast_order.menu_content.day.day %> |</td>
        <td><%= link_to 'Edit', edit_breakfast_order_path(breakfast_order), class: '' %> |</td>
        <td><%= link_to 'Destroy', breakfast_order, method: :delete, data: { confirm: 'Are you sure?' }, class: '' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Breakfast order', new_breakfast_order_path %>
